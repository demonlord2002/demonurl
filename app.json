{
  "name": "madara-leech-bot",
  "description": "Telegram File Leech Bot using Pyrogram and Aria2",
  "repository": "https://github.com/cookies2002/url_uploader_bot",
  "keywords": ["telegram", "pyrogram", "aria2", "leech", "bot"],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API HASH",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID (numeric)",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo Bot deployed successfully!"
  }
}
