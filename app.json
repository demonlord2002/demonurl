{
  "name": "MadaraUchihaFileBot",
  "description": "Telegram Leech / Downloader Bot using Pyrogram and Aria2",
  "repository": "https://github.com/cookies2002/url_uploader_bot",
  "keywords": ["telegram", "bot", "aria2", "pyrogram"],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "API_ID": {
      "description": "Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID (integer)",
      "required": true
    },
    "ARIA2_SECRET": {
      "description": "Aria2 RPC secret",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo 'Bot deployed successfully!'"
  }
}
